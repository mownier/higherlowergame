    package="me.mounir.higherlowergame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:name="GamePrefsApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:hardwareAccelerated="true">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/label_menu" >
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="@string/label_play" >
        </activity>
        <activity
            android:name=".ScoreActivity"
            android:label="@string/label_score" >
        </activity>
         <activity
            android:name=".HelpActivity"
            android:label="@string/label_help" >
        </activity>
    </application>

</manifest>